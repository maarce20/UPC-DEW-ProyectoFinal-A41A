<div class="heading"><h2>Listado de Locales</h2></div>

<table border='1' >
  <tr>
    <th style='width:100px;' >Nombre</th>
    <th style='width:250px;'>Direccion</th>
    <th style='width:100px;'>Distrito</th>
    <th style='width:100px;'>Telefono</th>
    <!--<th>Longitude</th>
    <th>Latitude</th>
    <th>Gmaps</th>-->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locals.each do |local| %>
  <tr>
    <td><%= local.name %></td>
    <td><%= local.address %></td>
    <td><%= local.district.name %></td>
    <td><%= local.phone %></td>
    <!--<td><%= local.longitude %></td>
    <td><%= local.latitude %></td>
    <td><%= local.gmaps %></td>-->
    <td style='width:50px;'><%= link_to 'Ver', local %></td>
    <td style='width:50px;'><%= link_to 'Editar', edit_local_path(local) %></td>
    <td style='width:50px;'><%= link_to 'Eliminar', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

