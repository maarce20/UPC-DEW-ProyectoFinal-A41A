<h1>Listing concerts</h1>

<br />

<%= search_form_for @search do |f| %>
  <%= f.condition_fields do |c| %>
      <div class="form-inputs">
        <%= c.attribute_fields do |a| %>
            <%= a.attribute_select associations: [:musical_group] %>
        <% end %>
        <%= c.predicate_select %>
        <%= c.value_fields do |v| %>
            <%= v.text_field :value %>
        <% end %>
      </div>  
  <% end %>
  <div class="form-actions">
    <%= f.submit "Search"%>
  </div>
<% end %>

<br /><br />

<table border="1">
  <tr>
    <th>Name</th>
    <th>Extension</th>
    <th>Fec conc</th>
    <th>Hora ini</th>
    <th>Hora fin</th>
    <th>Musical group</th>
    <th>Local</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @concerts.each do |concert| %>
  <tr>
    <td><%= concert.name %></td>
    <td><%= concert.extension %></td>
    <td><%= concert.fec_conc %></td>
    <td><%= concert.hora_ini %></td>
    <td><%= concert.hora_fin %></td>
    <td><%= concert.musical_group.name %></td>
    <td><%= concert.local.name %></td>
    <td><%= concert.user.name_user %></td>
    <td><%= link_to 'Show', concert %></td>
    <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
    <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Concert', new_concert_path %>
